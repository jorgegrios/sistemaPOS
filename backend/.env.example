# ============================================
# üöÄ POS SYSTEM - CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env and fill with your values
# NEVER commit .env to version control!

# ====================
# üèóÔ∏è  APP CONFIGURATION
# ====================
PORT=3000
NODE_ENV=development
HOST=0.0.0.0
API_PREFIX=/api/v1

# ====================
# üóÑÔ∏è  DATABASE
# ====================
DATABASE_URL=postgresql://username:password@host:5432/database_name

# ====================
# üîê AUTHENTICATION & SECURITY
# ====================
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=your_32_character_access_secret_here_change_me
JWT_REFRESH_SECRET=your_32_character_refresh_secret_here_different
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS - Comma separated for multiple origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# ====================
# ‚ö° CACHE (Redis)
# ====================
REDIS_URL=redis://username:password@redis-host:6379/0
REDIS_PASSWORD=your_redis_password_here
REDIS_TLS=false  # Set true for production

# ====================
# üí≥ PAYMENT GATEWAYS
# ====================

# ----- Stripe -----
STRIPE_SECRET_KEY=sk_test_51xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxx

# ----- Square -----
SQUARE_ACCESS_TOKEN=EAAAxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SQUARE_ENVIRONMENT=sandbox  # sandbox or production
SQUARE_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# ----- Mercado Pago -----
MERCADOPAGO_ACCESS_TOKEN=TEST-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MERCADOPAGO_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx

# ----- PayPal (Optional) -----
PAYPAL_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYPAL_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYPAL_ENVIRONMENT=sandbox  # sandbox or live

# ====================
# üåê WEBHOOKS & CALLBACKS
# ====================
WEBHOOK_BASE_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com
CALLBACK_SUCCESS_URL=https://yourdomain.com/success
CALLBACK_FAILURE_URL=https://yourdomain.com/failure

# ====================
# üìä LOGGING & MONITORING
# ====================
LOG_LEVEL=info  # debug, info, warn, error
LOG_FORMAT=json  # json or simple
SENTRY_DSN=https://xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx@sentry.io/xxxxxxx

# ====================
# üìß EMAIL (Optional)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
EMAIL_FROM=noreply@yourdomain.com

# ====================
# üîç DEBUG & DEVELOPMENT
# ====================
DEBUG=false
SEED_DATABASE=false
ENABLE_SWAGGER=true  # Disable in production